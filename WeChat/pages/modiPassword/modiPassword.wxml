<!--pages/modiPassword/modiPassword.wxml-->
<!--账号-->
<view>
  <label>手机号</label>
  <input placeholder='请输入手机号' bindinput='mySetData' data-keyname='userPhone' />
</view>
<!--原密码-->
<view>
  <label>原密码</label>
  <input password='true' placeholder='请输入原密码' bindinput='mySetData' data-keyname='userpwOld' />
</view>
<!--密码-->
<view>
  <label>密码</label>
  <input password='true' placeholder='请输入一次密码' bindinput='mySetData' data-keyname='userpw' />
</view>
<!--密码-->
<view>
  <label>再次输入密码</label>
  <input password='true' placeholder='请再输入一次密码' bindinput='mySetData' data-keyname='userpw2' />
</view>
<!--按钮-->
<view>
  <button type='primary' bindtap='modiPassword'>修改密码</button>
</view>