<!--pages/register/register.wxml-->
<view> <!--账号-->
  <label>手机号</label>
  <input placeholder='请输入手机号' bindinput='phoneInput' />
</view>
<view> <!--密码-->
  <label>密码</label>
  <input password='true' placeholder='请输入一次密码' bindinput='passwordInput' />
</view>
<view> <!--密码-->
  <label>再次输入密码</label>
  <input password='true' placeholder='请再输入一次密码' bindinput='passwordInput2' />
</view>
<view> <!--姓名-->
  <label>姓名</label>
  <input placeholder='请输入姓名' bindinput='userNameInput' />
</view>
<!--角色-->
<view>
  <checkbox-group bindchange='roleInput'> 
    <label>角色(可多选)</label>
    <label><checkbox value='1' />车主</label>
    <label><checkbox value='2' />物业</label>
    <label><checkbox value='3' />业主</label>
    <label><checkbox value='4' />运营商</label>
    <label><checkbox value='5' />停车场</label>
  </checkbox-group>
</view>
<!--按钮-->
<view>
  <button type='primary' bindtap='register'>注册</button>
</view>